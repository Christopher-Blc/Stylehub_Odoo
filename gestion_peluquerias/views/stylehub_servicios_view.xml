<odoo>
    <!-- Define la accion que abre la vista de Servicios (lista y formulario) -->
    <record id="action_stylehub_servicios" model="ir.actions.act_window">
        <field name="name">Servicios</field>
        <field name="res_model">stylehub.servicios</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vista de LISTA de Servicios: muestra nombre, precio base, duracion y estado activo -->
    <record id="view_stylehub_servicios_list" model="ir.ui.view">
        <field name="name">stylehub.servicios.list</field>
        <field name="model">stylehub.servicios</field>
        <field name="arch" type="xml">
            <list string="Servicios">
                <field name="nombre" width="40"/>
                <field name="precio_base" width="20"/>
                <field name="duracion_horas" width="20"/>
                <field name="activo" width="30"/>
                <field name="imagen" widget="image" width="50"/>
            </list>
        </field>
    </record>

    <!-- Vista de form de Servicios: permite editar nombre, precio, duraciÃ³n, estado e imagen -->
    <record id="view_stylehub_servicios_form" model="ir.ui.view">
        <field name="name">stylehub.servicios.form</field>
        <field name="model">stylehub.servicios</field>
        <field name="arch" type="xml">
            <form string="Servicio">
                <sheet>
                    <group>
                        <group>
                            <field name="nombre"/>
                            <field name="precio_base"/>
                            <field name="duracion_horas" widget="float_time"/>
                            <field name="activo"/>
                        </group>
                        <group>
                            <!-- Widget de imagen para mostrar foto del servicio -->
                            <field name="imagen" widget="image" class="oe_avatar"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>    
</odoo>
